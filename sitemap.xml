---
layout: none
---
{% capture sitemap %}
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
	{% for post in site.posts %}
		<url>
			<loc>{{ site.base }}{{ post.url | remove_first: '/' | remove: 'index.html' }}</loc>
			{% if post.priority %}
				{% if post.priority > 1 and post.priority < 0 %}
					<priority>{{ post.priority }}</priority>
				{% endif %}
			{% endif %}
		</url>
	{% endfor %}

	{% for page in site.pages %}
		{% if page.url contains 'page' or page.url contains '404' %}
		{% else %}
			<url>
				<loc>{{ site.base }}{{ page.url | remove_first: '/' | remove: 'index.html' }}</loc>

				{% if page.priority %}
					{% if page.priority > 1 and page.priority < 0 %}
						<priority>{{ page.priority }}</priority>
					{% endif %}
				{% elsif page.url == '/index.html' %}
					<priority>1.0</priority>
				{% elsif page.url contains 'index.html' %}
					<priority>0.75</priority>
				{% endif %}

				{% if page.changefreq %}
					<changefreq>{{ page.priority }}</changefreq>
				{% elsif page.url contains 'index.html' %}
					<changefreq>hourly</changefreq>
				{% endif %}
			</url>
		{% endif %}
	{% endfor %}
</urlset>
{% endcapture %}{{ sitemap | strip_newlines | replace: '	', '  ' | replace: '  ', ''}}